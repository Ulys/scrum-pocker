body
	font-family: Helvetica, Arial, sans-serif;

//Big fields styles

.play-field
	height: 300px
	width: 100%
	background-color: #777

.circle__header
	width: 100%
	height: 40px
	background-color: #ccc
	margin: 0px
	padding: 0px

.cards-field
	height: 270px
	width: 100%
	background-color: #333
	&__simple
		float: left
		width: 80%

//Different card styles
.card
	height: 100px
	width: 15%
	background-color: #fff
	float: left
	display: block
	margin: 10px 10px
	padding: 5px
	text-align: center
	line-height: 100px
	font-size: 32px

.coffee-card
	float: right
	width: 15%
	height: 250px
	background-color: black
	margin-right: 5%
	margin-top: 10px